/* pages/index/selection/selection.wxss */

page {
  background-color: #f5f5f5;
}

.main {
}

.tab {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  height: 80rpx;
  width: 100%;
  padding: 0 60rpx;
  align-items: center;
  font-size: 34rpx;
}

.searchArea {
  width: 100%;
  position: relative;
  text-align: center;
  color: #0599df;
  font-weight: 600;
}

.searchArea input {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  border: 1px solid #0599df;
  padding-left: 20rpx;
}

.searchArea icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
}

.courseList {
  padding: 20rpx;
}

.item {
  width: 100%;
  height: 240rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.info {
  width: 70%;
  padding: 60rpx 20rpx;
  line-height: 36rpx;
}

.info .coursename {
  font-size: 36rpx;
  color: #000;
}

.info .courseintro {
  font-size: 26rpx;
  color: #757373;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 80%;
  display: block;
}

.opt {
  width: 30%;
}

.opt image {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 16rpx;
  top: 14rpx;
}

.opt button {
  position: relative;
  width: 130rpx;
  height: 60rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  background-color: #0599df;
  color: #fff;
  margin: 90rpx auto;
  padding-left: 36rpx;
  padding-right: 0;
}

.opt .button-hover {
  opacity: 0.7;
}

.opt .yes {
  background-color: #fff;
  padding-left: 32rpx;
  color: #0599df;
}

.opt .yes image {
  left: 8rpx;
}

.submit_box input {
  border-bottom: 2rpx solid #ccc;
  width: 85%;
  margin: 0 auto;
  margin-bottom: 10rpx;
}
