/**index.wxss**/

page {
  background-color: #f5f5f5;
  height: 100%;
}

.main {
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
}

.mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.change_course {
  width: 100%;
  height: 80rpx;
  background: #0599df;
  position: relative;
  z-index: 2;
}

.change_area {
  width: 680rpx;
  margin: 0 auto;
  line-height: 80rpx;
  height: 80rpx;
  color: #fff;
  display: flex;
}

.change_area text {
  display: inline-block;
  vertical-align: middle;
}

.icon {
  margin-left: 10rpx;
  transition: all 0.3s;
  vertical-align: middle;
  transform: rotateZ(90deg);
}

.down {
  transform: rotateZ(-90deg);
}

.change_list {
  width: 100%;
  background: #fff;
  padding-top: 20rpx;
  position: absolute;
  top: 80rpx;
  left: 0;
  /* display: none; */
}

.change_list_area {
  overflow: scroll;
  max-height: 400rpx;
}

.change_item {
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 60rpx;
  border-bottom: 1px solid #ccc;
}

.change_item:last-child {
  border: 0;
}

.change_item text, .change_item icon {
  display: inline-block;
  vertical-align: middle;
}

.change_item icon {
  line-height: 0rpx;
}

.change_btns {
  display: flex;
  width: 100%;
}

.change_btns .btn {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-top: 1px solid #f5f5f5;
}

.btn:last-child {
  background: #0599df;
  color: #fff;
  border: 0;
}

.main_box {
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: space-around;
}

.main_box .box {
  height: 20%;
}

.sign_inner {
  width: 680rpx;
  height: 100%;
  background-color: #fff;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sign_txt {
  flex: 1;
  font-size: 48rpx;
  text-align: center;
}

.sign_logo {
  flex: 1;
  text-align: center;
}

.sign_logo image {
  width: 100rpx;
  height: 100rpx;
}
