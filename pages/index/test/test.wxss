
page {
    background-color: #f5f5f5;
}

.main {}

.tab {
    display: flex;
    justify-content: space-around;
    background-color: #fff;
    height: 100rpx;
    width: 100%;
    align-items: center;
    font-size: 30rpx;
}
.notsubmit,
.submited,
.his {
    flex: 1;
    height: 100%;
    line-height: 100rpx;
    text-align: center;
}

.active {
    color: #0599df;
    border-bottom: 4rpx solid #0599df;
}

.signList {
    padding: 20rpx;
}

.item {
    width: 100%;
    height: 240rpx;
    background-color: #fff;
    border-radius: 10rpx;
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
}
.finish .counts{
    display: inline-block;
}
.info {
    flex: 5;
    display: flex;
    justify-content: space-between;
    line-height: 44rpx;
}

.info_left {
    padding-left: 10rpx;
    font-size: 32rpx;
    line-height: 44rpx;
}

.info_left image {
    width: 14rpx;
    height: 14rpx;
    margin-right: 4rpx;
    vertical-align: middle;
}

.ing_txt {
    color: #ff6700;
    /* color: #ccc; */
    font-size: 28rpx;
    display: inline-block;
}

.over_txt {
    /* color: #ff6700; */
    color: #ccc;
    font-size: 28rpx;
    display: inline-block;
}

.info_right {
    text-align: right;
    font-size: 24rpx;
    /* padding-top: 20rpx; */
    /* line-height: 44rpx; */
}

.opt {
    flex: 2;
}

.opt image {
    width: 32rpx;
    height: 32rpx;
    position: absolute;
    left: 16rpx;
    top: 14rpx;
}

.opt button {
    position: relative;
    width: 130rpx;
    height: 60rpx;
    font-size: 28rpx;
    line-height: 60rpx;
    background-color: #0599df;
    color: #fff;
    margin: 90rpx 0rpx 90rpx 56rpx;
    padding-left: 36rpx;
    padding-right: 0;
}

.opt .result{
  padding-left: 0;
}
.opt .button-hover {
    opacity: 0.7;
}

.opt .yes {
    background-color: #fff;
    padding-left: 32rpx;
    color: #0599df;
}

.opt .yes image {
    left: 8rpx;
}