/* pages/mine/reviseInfo/reviseInfo.wxss */
page {
    background-color: #f5f5f5;
}

.avatar {
    width: 100%;
    height: 200rpx;
    margin-top: 30rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
}

.left {
    margin-left: 30rpx;
    padding-top: 84rpx;
}

.right {
    display: flex;
    justify-content: space-between;
    margin-right: 20rpx;
}

.avatar_pic {
    width: 140rpx;
    height: 140rpx;
    margin-top: 30rpx;
}

.right_pic {
    width: 30rpx;
    height: 30rpx;
    margin-top: 85rpx;
    margin-left: 10rpx;
}

.cell {
    background-color: #fff;
    width: 100%;
    height: 120rpx;
    margin-top: 30rpx;
    display: flex;
    padding-top: 40rpx;
    padding-left: 30rpx;
}

.title {}

.cell input {
    display: block;
    font-size: 34rpx;
    border-bottom: 1px solid #0599df;
    margin-left: 30rpx;
    width: 560rpx;
    color: #555555;
}

.keep{
    margin: 30rpx 0;
    padding: 0 20rpx;
}

.keep button{
    background-color: #0599df;
    color: #fff;
}
.keep .button-hover{
    opacity: 0.7;
}
.cancel{
    padding: 0 20rpx;
}
