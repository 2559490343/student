page {
    background-color: #f5f5f5;
}

.main {
    padding-top: 30rpx;
}

.person {
    background-color: #fff;
    width: 100%;
    height: 200rpx;
}

.avator,
.info {
    float: left;
    height: 100%;
}

.avator {
    width: 200rpx;
}

.avator image {
    width: 140rpx;
    height: 140rpx;
    margin: 30rpx;
    /* vertical-align: middle; */
}

.info {
    padding-top: 46rpx;
}

.info text {
    display: block;
    line-height: 60rpx;
}

.info .name {
    font-size: 36rpx;
}

.info .id {
    font-size: 28rpx;
    color: #999999;
    height: 28rpx;
    line-height: 20rpx;
}

.container1,.container2 {
    background-color: #fff;
    margin-top: 60rpx;
    padding-left: 40rpx;
}

.cell {
    height: 140rpx;
    color: #353535;
    font-size: 34rpx;
    padding: 50rpx 10rpx;
    padding-right: 36rpx;
    display: flex;
    justify-content: space-between;
}
.cell text{
    width: 440rpx;
    height: 40rpx;
    line-height: 15rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: inline-block;
    vertical-align: middle;
    font-size: 30rpx;
    color: #999;
}
.cell image{
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
    margin-left: 10rpx;
}
.border{
    border-bottom: 1px solid #d9d9d9;
}